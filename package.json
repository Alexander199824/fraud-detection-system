{
  "name": "fraud-detection-system",
  "version": "1.0.0",
  "description": "Sistema de detección de fraude con redes neuronales modulares",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install:all": "npm install && cd frontend && npm install",
    "migrate": "node backend/scripts/migrate.js",
    "seed": "node backend/scripts/seed.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.0",
    "dotenv": "^16.1.4",
    "bcrypt": "^5.1.0",
    "jsonwebtoken": "^9.0.0",
    "axios": "^1.4.0",
    "brain.js": "^1.6.1",
    "ml-matrix": "^6.10.4",
    "twilio": "^4.11.1",
    "node-cron": "^3.0.2",
    "winston": "^3.9.0",
    "joi": "^17.9.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "concurrently": "^8.1.0",
    "jest": "^29.5.0"
  },
  "keywords": ["fraud-detection", "neural-networks", "machine-learning", "security"],
  "author": "Estudiantes UMG Salamá",
  "license": "MIT"
}