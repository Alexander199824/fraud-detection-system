{
  "name": "fraud-detection-system",
  "version": "1.0.0",
  "description": "Sistema de detección de fraude con redes neuronales modulares",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "dev:full": "concurrently \"npm run dev\" \"npm run client\"",
    "install:all": "npm install && cd frontend && npm install",
    "migrate": "node backend/scripts/migrate.js",
    "seed": "node backend/scripts/seed.js"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "bcrypt": "^5.1.0",
    "brain.js": "^1.6.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^7.0.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.0",
    "ml-matrix": "^6.10.4",
    "morgan": "^1.10.0",
    "node-cron": "^3.0.2",
    "pg": "^8.11.0",
    "twilio": "^4.11.1",
    "uuid": "^9.0.0",
    "winston": "^3.9.0"
  },
  "devDependencies": {
    "concurrently": "^8.1.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.22"
  },
  "keywords": [
    "fraud-detection",
    "neural-networks",
    "machine-learning",
    "security"
  ],
  "author": "Estudiantes UMG Salamá",
  "license": "MIT"
}
